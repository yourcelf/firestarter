@import "nib"
/*
  Utilities
*/

border-box()
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

user-select()
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none

green-glow()
  background-color: rgba(255, 255, 255, 0.4)
  box-shadow: 0 0 25px 0 rgba(#ddd, 0.8), 0 0 5px 1px rgba(#eee, 0.8) inset
  border-radius: 3px 5px 7px 9px / 24px 26px 28px 20px
  transition-property: box-shadow
  transition-duration: 1s
  &:hover
    box-shadow: 0 0 25px 0 rgba(#ddd, 0.8), 0 0 5px 1px rgba(#fed, 0.8) inset
  padding: 1em;

.green-glow
  green-glow()

.subtle
  color: #aaa

cursive-font()
  font-family: "Indie Flower", sans-serif
  font-weight: normal

.cursive
  cursive-font()

/*
  Bootstrap overrides
*/
.typeahead
  z-index: 1051

.pull-right .dropdown-menu:after
  left: auto
  right: 13px
.pull-right .dropdown-menu
  left: auto
  right: 0

.btn.loading
  background-image: url("/img/spinner.gif")
  background-repeat: no-repeat
  &:hover
    background-position: 0 0

.help-inline
  color: #999


/*
  Basic styles
*/

body
  background: url("/img/whitegrain.png") repeat
  min-width: 240px
  color: #210700
  line-height: 1.5em

a
  //transition-property: color
  //transition-duration: 1s
  color: #05f
  &:hover
    text-decoration: none

a:visited
  color: #0af
a.btn, a.btn:visited
  color: inherit
  &.btn-primary, &.btn-info, &.btn-success, &.btn-warning, &.btn-danger, &.btn-inverse
    color: white

a.twinkles, a.twinkles:visited
  color: #ddd

h1,h3
  cursive-font()

:-moz-placeholder
  color: #bbb !important
::-webkit-input-placeholder
  color: #bbb !important

it-color = #ff0287
.intertwinkles
  color: it-color
  &.twunkled
    position: relative
  &.twunkled
    span
      pointer-events: none
      position: relative
      top: 0
      transition-property: top
      transition-duration: 100ms
    span.bump
      top: -5px

.date
  font-size: 80%
  color: #aaa
  font-family: sans-serif


/****************************************************************
  Components
*****************************************************************/

/*
  Toolbar
*/
.room-users
  li.self
    font-size: 120%
  .dropdown-menu a
    pointer-events: none

#auth_frame
  margin-top: 8px

.navbar .brand
  color: black
.navbar-top .navbar-inner
  box-shadow: 0 1px 3px rgba(200, 200, 200, 0.25), -1px 0 rgba(200, 200, 200, 0.1) inset
  border: none
  background: rgba(255, 255, 255, 0.2)
.subnav .navbar-inner
  background-color: #fafafa
  background-image: linear-gradient(center top, #fff, #f2f2f2)
  #group_menu .group-name
    cursive-font()
    font-size: 200%

/*
  User menu
*/

.user-menu
  background-image: none
//  transform: rotate(2deg)
.btn-group > .btn-small.user-menu
  color: black
//  font-size: 16px

/*
  Icon chooser
*/
input.color
  font-size: 0px
.profile-image-chooser
  .profile-image
    float: left
    width: 32px
    height: 32px
    border: 1px solid #eee
    position: relative
    font-size: 0px
    &:hover
      border: 1px solid #ff9900
    &.chosen
      background-color: #ff9900

/*
  Sharing widget
*/
.sharing-controls
  .summary
    padding: 0.5em
    background: rgba(200, 200, 200, 0.2)
    border-radius: 1em
    display: inline-block
    h4
      font-family: inherit
      font-weight: normal
      font-style: italic
      color: black
      font-size: 1.2em
    .perms, .additional
      font-family: sans-serif
      font-size: 0.8em
      color: #060
  select
    width: inherit
.url-to-share input
  width: 300px
  cursor: text
    

.sharing-settings-button .popover
  width: 300px
  
/*
 Sticky footer, a la http://ryanfait.com/sticky-footer/
 */
footer-height = 370px
footer-height-narrow = 600px

html,body { height: 100% }
#page
  min-height: 100%
  height: auto !important
  height: 100%
  margin: 0 auto (0px - footer-height)
  @media (max-width: 767px) { margin: 0 auto (0px - footer-height-narrow) }

footer, #push
  height: footer-height
  @media (max-width: 767px) { height: footer-height-narrow }

// Footer styles other than stickyness
footer
  opacity: 0.5
  transition-property: 'opacity'
  transition-duration: 500ms
  &:hover
    opacity: 1
  background: linear-gradient(top, rgba(2,255,135,0), rgba(2,255,135,0.3))
  position: relative
  .ramp
    background: linear-gradient(top, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0.5))
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
  .footer-content
    border-color: #EEE
    border-color: #EEE -moz-use-text-color #fff
    border-image: none
    border-left: 0 none
    border-right: 0 none
    border-style: solid none
    border-width: 1px 0
    -moz-border-bottom-colors: none
    -moz-border-left-colors: none
    -moz-border-right-colors: none
    -moz-border-top-colors: none
    height: footer-height - 2px
    @media (max-width: 767px) { height: footer-height-narrow - 2px }
    position: relative
  .sponsors, .about-links, .community
    h2
      font-size: 120%
    padding: 1em
    border-radius: 0.5em
    li
      list-style-type: none
  .bg
    position: absolute
    bottom: 0px
    left: 0
    width: 100%
    text-align: center
  h2
    cursive-font()
    text-align: center
    white-space: nowrap
    margin-bottom: 0.5em !important

